! Xft settings
Xft.dpi:                    96
Xft.antialias:             true 
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

! URxvt settings
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.internalBorder:       10
/* URxvt.buffered:             false */
URxvt.allow_bold:           false

URxvt*font:                 xft:SauceCodePro Nerd Font:style=Regular:size=11, \
                            xft:DejaVu Sans Mono:style=Book:antialias=false:size=12, \
                            xft:Terminus:pixelsize=12,xft:Inconsolata\ for\ Powerline:pixelsize=12, \
                            xft:Source\ Code\ Pro\ Medium:pixelsize=13:antialias=true:hinting=true,xft:Source\ Code\ Pro\ Medium:pixelsize=13:antialias=true:hinting=true

URxvt*letterSpace:          -1
URxvt.lineSpace:            0

URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false
URxvt.pointerBlank:         true

URxvt.saveLines:            500
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false
URxvt.scrollBar_right:      false
URxvt.scrollBar_floating:   false

URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true

URxvt.perl-ext-common:      default,matcher,tabbedex

URxvt.tabbed.new-button:    no
URxvt.tabbed.autohide:      yes
URxvt.tabbed.tabbar-fg:     15
URxvt.tabbed.tabbar-bg:     0
URxvt.tabbed.tab-fg:        15
URxvt.tabbed.tab-bg:        4
URxvt.tabbed.title:         no

URxvt.matcher.button:       1
URxvt.url-launcher:         /usr/bin/firefox-nightly
URxvt.matcher.rend.0:       Uline Bold fg5

